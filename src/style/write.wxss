.ant-input-lg {
  font-weight: 600;
}
.show-html {
  padding: 5px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
  background-color: #f0f0f0;
  word-break: break-all;
}
.show-html h1 {
  font-size: 32px;
}
.show-html h2 {
  font-size: 28px;
  border-bottom: 1px solid #cbcbcb;
}
.show-html h3 {
  font-size: 24px;
}
.show-html h4 {
  font-size: 20px;
}
.show-html pre {
  display: block;
  background-color: #ccc;
  padding: 5px;
  border-radius: 5px;
}
.show-html pre > code {
  color: #000;
  background-color: #ccc;
}
.show-html code {
  background-color: #fff5f5;
  padding: 5px 10px;
  border-radius: 5px;
  margin: 0px 3px;
  color: #ff502c;
}
.show-html blockquote {
  border-left: 4px solid #cbcbcb ;
  padding: 5px 5px 5px 10px;
  background-color: #f8f8f8;
  margin-top: 5px;
  width: 320px;
}
.show-html blockquote p {
  margin-bottom: 5px;
}
.show-html ol li {
  font-size: 16px;
}
